<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/js/script.js"></script>
    <link href="/css/style.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <title>ToDo</title>
</head>
<body>
    <div class="wrapper">
        <h1>ToDo List</h1>
        <div class="forms">
            <form action="/" method="post">
                <input type="text" name="title" required>
                <button type="submit" class="add">Add</button>
            </form>
            <button onclick="location.href='/deleteAll'" >Delete all completed</button>
            <% for(var i=0; i < todos.length; i++) { %>
                <div class="todo">
                  <div class="<%= todos[i].completed %>">
                    <p><%= new Intl.DateTimeFormat('en-GB', { dateStyle: 'full', timeStyle: 'medium'}).format(todos[i].create_date) %></p>
                    <p class="desc"><%= todos[i].title %></p>
                  </div>  
                  <div class="actionWrapper">
                      <%if (!todos[i].completed) { %>
                        <form action="/<%= todos[i]._id %>/completed" method="post">
                            <button class="complete">Complete</button>
                          </form>
                      <% } %>
                      <form action="/<%= todos[i]._id %>/delete" method="post" class="deleteForm">
                        <button type="submit" class="remove">Delete</button>
                      </form>
                  </div>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>